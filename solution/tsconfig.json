{
  "compilerOptions": {
    "target": "ES6", 
    "module": "CommonJS", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express", "jest"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts" 
  ],
  "exclude": [
    "node_modules"
  ]
}
